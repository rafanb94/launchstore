{% extends 'template.njk' %}

{% block content %}

    <section class="container form">
        {# o atributo action do formulário, deve retornar para URL que está configurada na rota post. 
         #}
        <form method="POST" action="/produtos" enctype="multipart/form-data">
        {# o atributo enctype="multipart/form-data" nos permite enviar multiplos arquivios graças ao Multer#}
            <div class="header">
                <h3>Cadastrar Produto {{productId}}</h3>
            </div>
            <div class="fields">
                {% include 'products/form.njk' %}
            </div>

            <button class="button" type="submit">Salvar</button>
        </form>
    </section>

    {% endblock %}