<div class="item">
    <div>Nome Completo</div>
    <div>
    <input type="text" name="name" placeholder="Digite o seu nome completo" value="{{ user.name }}">
    </div>
</div>
    
 <div class="item">
    <div>E-mail</div>
    <div>
    <input type="email" name="email" placeholder="Digite o seu e-mail" 
    value="{{ user.email }}"
    onblur="Validate.apply(this, 'isEmail')">
    </div>
</div>
       
 <div class="item">
    <div>Senha</div>
    <div>
    <input type="password" name="password"
    {% if not user.id %}
     placeholder="Digite a senha"
     {% else %}
     placeholder="Digite uma senha para atualizar"
     {%endif%}
     >
    </div>
</div>

{% if not user.id %} 
 <div class="item">
    <div>Repetir Senha</div>
    <div>
    <input type="password" name="passwordRepeat" placeholder="Repita a senha escolhida">
    </div>
</div>
{% endif %}

 <div class="item">
    <div>CPF ou CNPJ</div>
    <div>
    <input type="text" name="cpf_cnpj" placeholder="Digte o documento" 
    value="{{ user.cpf_cnpj }}"
    onkeydown="Mask.apply(this, 'cpfCnpj' )"
    onblur="Validate.apply(this, 'isCpfCnpj')">
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div>
    <input type="text" name="cep" placeholder="00000-000" 
    value="{{ user.cep }}"
    onkeydown="Mask.apply(this, 'cep')"
    onblur="Validate.apply(this, 'isCep')">
    </div>
</div>
  <div class="item">
    <div>Endereço Completo</div>
    <div>
    <input type="text" name="address" placeholder="Digite seu endereço completo" 
    value="{{ user.address }}">
    </div>
</div>          